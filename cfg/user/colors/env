#!/usr/bin/sh
#
# $ZDOTDIR/colorsenv
#
# colorsenv provides env vars to format terminal output in colors
#
export BLACK="$(tput setaf 0)"
export DARKRED="$(tput setaf 1)"
export DARKGREEN="$(tput setaf 2)"
export DARKYELLOW="$(tput setaf 3)"
export DARKBLUE="$(tput setaf 4)"
export DARKMAGENTA="$(tput setaf 5)"
export DARKCYAN="$(tput setaf 6)"
export LIGHTGREY="$(tput setaf 7)"
export DARKGREY="$(tput setaf 8)"
export RED="$(tput setaf 9)"
export GREEN="$(tput setaf 10)"
export YELLOW="$(tput setaf 11)"
export BLUE="$(tput setaf 12)"
export MAGENTA="$(tput setaf 13)"
export CYAN="$(tput setaf 14)"
export WHITE="$(tput setaf 15)"
export RESET="$(tput sgr0)"
